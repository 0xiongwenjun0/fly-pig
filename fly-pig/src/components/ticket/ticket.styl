.maxbox
    background #f2f3f4   
    height 100vh
    .tickettab
        background-color #fff
        .tabbox
            border-bottom 1px solid #f2f3f4
            display flex
            padding-left 0
            height 13.34vw
            line-height 13.34vw
            font-size 3.89vw
            text-align center
            margin-bottom 0
            .tab
                display inline-block
                flex 1
                list-style none
                text-align center
            .active
                font-weight 700
            .active::after
                margin-left auto
                margin-right auto
                height 3px
                width 11.5vw
                margin-top -3px
                background #ffc900
                content ""
                display block
