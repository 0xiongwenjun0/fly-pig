        .buttonbox
            padding 0 15px 20px;
            .button
                width 100%
                height 42px
                button
                    width 100%
                    height 100%
                    border-radius 3px;
                    font-size 18px
                    overflow hidden
                    background #ff5000;
                    line-height 42px;
                    color #fff;
                    background-image linear-gradient(90deg,#ff9300,#f35);
                    border none
                    outline none
        .infotextbox
            overflow hidden
            font-size 12px;
            line-height 17px;
            padding-left 15px
            padding-right 15px
            padding-bottom 20px;
            color #a5a5a5;
            .left
                display inline-block
                .text
                    margin-right 21px
            .right
                display inline-block
        .discountbox
            background-color #f2f3f4
            overflow hidden
            .discount
                position relative
                margin 10px 0
                background #fff
                height 50px
                padding: 0 12px
                .lefttitle
                    height 100%
                    position absolute
                    top 0
                    .title
                        line-height 50px
                        padding-left 25px
                .rightconnect
                    width 100%
                    height 100%
                    text-align right
                    .my-carousel
                        .v-item
                            font-size: 12px;
                            height: 100%;
                            color: #999;
                            line-height 50px
                            .city
                                display inline-block
                            .like
                                display inline-block
                                margin-left: 9px;
                            .price
                                display inline-block
                                padding 0 2px
                                color #ff5000
                            .iconbox
                                display inline-block
                                height 24px
                                position relative
                                width 20px
        .logobox
