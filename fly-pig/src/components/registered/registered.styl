.maxbox
    height 100vh
    overflow hidden
    .formbox
        width 80%
        margin-left auto
        margin-right auto
        .inputbox
            display inline-block
            background-color #fff
            border-radius: 5px
            overflow hidden
            flex 1
            input
                margin-left 5px 
                height 100%
                width 100%
                outline: none 
                border: none 
        .username
            display flex
            height 25px
            line-height 25px
            margin-bottom 10px
        .password
            display flex
            height 25px
            line-height 25px
        .title
            display inline-block
            margin-right 10px
        .submitbox
            margin-top 20px
            .submit
                font-size: .42666667rem;
                width: 100%;
                height: 1.2rem;
                line-height: 1.2rem;
                border-radius: .6rem;
                text-align: center;
                border: 0;
                background: -webkit-linear-gradient(left,#ff9000,#ff5000) no-repeat;
                color: #fff;
                box-shadow: 0 0.08rem 0.16rem #f7c7b1;
